# Example Environment Variables for Production
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git!

# ==========================================
# DEPLOYMENT CONFIGURATION
# ==========================================
# Server Configuration
SSH_HOST=your-server-ip
SSH_USERNAME=your-ssh-username
SSH_PORT=22

# Docker Registry
REGISTRY=ghcr.io
IMAGE_PREFIX=your-github-username/cnweb

# Service Versions
TAG=latest

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Main Database Cluster (User, Order, Payment, Product Services)
SPRING_DATASOURCE_PASSWORD=your-main-db-password

# Separate Database Cluster (Notification & File Services)
NOTIFICATION_DB_PASSWORD=your-notification-db-password
FILE_DB_PASSWORD=your-file-db-password

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_HOST=your-redis-host
REDIS_PORT=25061
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password
REDIS_SSL_ENABLED=true

# ==========================================
# RABBITMQ CONFIGURATION
# ==========================================
RABBITMQ_ADDRESSES=amqps://username:password@your-rabbitmq-host/virtual-host
RABBITMQ_USERNAME=your-rabbitmq-username
RABBITMQ_PASSWORD=your-rabbitmq-password
RABBITMQ_VIRTUAL_HOST=your-virtual-host

# ==========================================
# EMAIL CONFIGURATION (Notification Service)
# ==========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SendGrid API Key (alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SIGNER_KEY=your-jwt-secret-key-min-32-characters
JWT_VALID_DURATION=3600
JWT_REFRESHABLE_DURATION=86400

# ==========================================
# INTERNAL SERVICE SECURITY
# ==========================================
INTERNAL_SERVICE_SECRET=your-internal-service-secret

# ==========================================
# S3/OBJECT STORAGE CONFIGURATION (File Service)
# ==========================================
S3_ENDPOINT=https://your-region.digitaloceanspaces.com
S3_REGION=your-region
S3_BUCKET_NAME=your-bucket-name
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# ==========================================
# GOOGLE OAUTH CONFIGURATION (User Service)
# ==========================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==========================================
# PAYMENT GATEWAY CONFIGURATION (ZaloPay)
# ==========================================
ZALOPAY_APP_ID=your-zalopay-app-id
ZALOPAY_KEY1=your-zalopay-key1
ZALOPAY_KEY2=your-zalopay-key2
ZALOPAY_CREATE_ORDER_URL=https://sb-openapi.zalopay.vn/v2/create
ZALOPAY_QUERY_ORDER_URL=https://sb-openapi.zalopay.vn/v2/query
ZALOPAY_GET_BANK_LIST_URL=https://sbgateway.zalopay.vn/api/getlistmerchantbanks
ZALOPAY_CALLBACK_URL=http://your-server-ip:8080/api/payment/v1/payments/zalopay/callback
ZALOPAY_REDIRECT_URL=http://your-frontend-url/payment/result

# ==========================================
# PAYMENT REDIRECT URL (Order Service)
# ==========================================
PAYMENT_REDIRECT_URL=https://your-domain.com/payment/result

# ==========================================
# ELASTICSEARCH CONFIGURATION (Product Service)
# ==========================================
ELASTICSEARCH_URIS=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
